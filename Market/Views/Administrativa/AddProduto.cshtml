@model Market.ViewModels.ViewModelProduto

@{
    ViewData["Title"] = "AddProduto";
    Layout = "~/Views/Shared/_LayoutAdministrativa.cshtml";
}

<div class="row">
    <div class="col-md-6">
        <form asp-action="AddProduto">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Produto.Nome" class="control-label"></label>
                <input asp-for="Produto.Nome" class="form-control" />
                <span asp-validation-for="Produto.Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Produto.Valor" class="control-label"></label>
                <input asp-for="Produto.Valor" class="form-control" />
                <span asp-validation-for="Produto.Valor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Insumos" class="control-label"></label>
                @*<input asp-for="Produto.Descricao" class="form-control select2" multiple="multiple" data-placeholder="Selecione os ingredientes"
                    style="width: 100%;" />*@
                @*<span asp-validation-for="Produto.Descricao" class="text-danger"></span>*@
                <select asp-for="Produto.Descricao" class="form-control select2" multiple="multiple" data-placeholder="Selecione os ingredientes"
                        style="width: 100%;"
                        asp-items="@(new MultiSelectList(@ViewBag.insumos,"IdInsumo", "Nome")) "></select>

            </div>
            <div class="form-group">
                <label asp-for="Produto.Foto" class="control-label"></label>
                <input asp-for="Produto.Foto" class="form-control" />
                <span asp-validation-for="Produto.Foto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Categorias" class="control-label"></label>
                <select asp-for="Produto.CategoriaId" class="form-control select2"
                        asp-items="@(new SelectList(@ViewBag.categorias,"IdCategoria", "Descricao")) "></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>

        </form>
    </div>
</div>
